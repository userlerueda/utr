{
    "python.formatting.provider": "black",
    "python.formatting.blackPath": ".venv/bin/black",
    "editor.formatOnSave": true,
    "[python]": {
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      }
    },
    "markdownlint.config": {
      "MD024": {
        "allow_different_nesting": true,
        "siblings_only": true
      }
    }
  }